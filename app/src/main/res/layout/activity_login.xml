<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagebackngoisao"
    tools:context=".views.activity.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/shape_view_add" />

            <TextView
                android:id="@+id/texts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="40dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/assignment_android_networking"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/texts">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/shape_view_editext" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Login Information"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:theme="@style/AppthemNew"
                        android:textColorHint="@color/colorWhite"
                        app:passwordToggleTint="@color/PinkNhe">

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorTransparent"
                            android:drawableRight="@drawable/ic_baseline_email_24"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingRight="13dp"
                            android:text="lykuteo123@gmail.com"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite"
                        app:passwordToggleDrawable="@drawable/visibility_edittext"
                        app:passwordToggleEnabled="true"
                        android:theme="@style/AppthemNew"
                        app:passwordToggleTint="@color/colorWhite">

                        <EditText
                            android:id="@+id/edtPassWord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorTransparent"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:text="12345678"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_button"
                        android:padding="10dp"
                        android:text="@string/login"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/tvforgot"
                        android:layout_marginTop="10dp"
                        android:text="Forgot Password?"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:maxLines="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvResign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="I don't have a login account? Sign up now?"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>