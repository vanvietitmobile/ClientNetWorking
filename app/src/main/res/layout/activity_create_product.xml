<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.CreateProductActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imgBack"
            android:background="@drawable/backkhoi" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape_view_add" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view1"
            android:layout_marginTop="?android:actionBarSize">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_view_list_user" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/view2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:text="Title:"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/edtTitle"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/view2"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/shape_view_searcht"
                            android:textColor="@color/colorBlack" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relativeLayout1"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/view3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:text="Content:"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/edtContent"
                            android:padding="10dp"
                            android:maxLines="4"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_below="@id/view3"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/shape_view_searcht"
                            android:textColor="@color/colorBlack" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relativeLayout2">

                        <TextView
                            android:id="@+id/view4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:text="Address:"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/edtAddress"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/view4"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/shape_view_searcht"
                            android:textColor="@color/colorBlack" />
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/imgProduct"
                        android:src="@drawable/ic_upload"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/relativeLayout3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <Button
                        android:id="@+id/btnPost"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relativeLayout3"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:layout_marginHorizontal="50dp"
                        android:layout_toRightOf="@id/imgProduct"
                        android:background="@drawable/shape_button"
                        android:padding="10dp"
                        android:text="Post"/>

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>